<h1>BURGERS</h1>

<h2>Burgers that have not been eaten</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{ burgers devoured=false}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that have been eaten</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{ burgers devoured=true}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="sleepy">Devoured?</label><br>
        <input type="radio" name="sleepy" value="1" checked> Devoured<br>
        <input type="radio" name="sleepy" value="0"> Not devoured
    </div>

    <button type="submit">Add Burger</button>
</form>