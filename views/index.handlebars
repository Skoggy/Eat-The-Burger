<div class="head-container">

    <div style="width:30%;height:0;padding-bottom:20%;position:relative;"><iframe
            src="https://giphy.com/embed/c4uMOcw6FkgY8" width="50%" height="50%" style="position:absolute"
            frameBorder="0" allowFullScreen></iframe></div>
    <h1>Eat Dat Burger</h1>
</div>
<div class="container">
    <div class="uneaten-burgers">
        <h2>Burgers that have not been eaten</h2>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="eaten-burgers">
        <h2>Burgers that have been eaten</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured = false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<form class="create-burger">
    <h2>Add a Burger</h2>

    <div class="form-group">
        <label for="burgerName">Burger Name</label>
        <input type="text" id="burgerName" class="burgerName" name="burger_name">
    </div>
    <br>


    <button type="submit" class="add-burger btn">Add Burger</button>
</form>

</div>